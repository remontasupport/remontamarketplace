generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ContractorProfile {
  id                       String    @id @default(cuid())
  zohoContactId            String    @unique
  firstName                String
  lastName                 String
  email                    String    @unique
  phone                    String?
  profileImage             String?
  title                    String?
  companyName              String?
  yearsOfExperience        Int?
  skills                   String[]
  specializations          String[]
  city                     String?
  state                    String?
  postcode                 String?
  lastSyncedAt             DateTime  @default(now())
  createdAt                DateTime  @default(now())
  updatedAt                DateTime  @updatedAt
  emergencyClinicName      String?
  emergencyContact1        String?
  emergencyContact2        String?
  emergencyEmail2          String?
  emergencyEmail3          String?
  emergencyName            String?
  emergencyPhone1          String?
  emergencyPhone2          String?
  emergencyRelationship    String?
  profileTitle             String?
  qualificationsAndCerts   String?
  servicesOffered          String[]
  additionalInformation    String?
  businessUnique           String?
  dateSigned2              DateTime?
  funFact                  String?
  hasVehicleAccess         Boolean?
  hobbiesAndInterests      String?
  languageSpoken           String?
  signature2               String?
  whyEnjoyWork             String?
  documentsUploads         String?
  infectionControlTraining String?
  insuranceUploads         String?
  ndisTrainingFileUpload   String?
  ndisWorkerCheck          String?
  policeCheck              String?
  qualificationsUploads    String?
  workingWithChildrenCheck String?
  photoSubmission          String?  // Vercel Blob URL

  @@index([email])
  @@index([zohoContactId])
  @@index([city])
}
